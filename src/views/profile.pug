doctype html
head
  meta(charset='utf-8')
  title Pagina principal

  .container
    header.text-center
      h1 Página principal
      .container
      .col-sm-12
        .card
          .card-body
            h3.card-title
              span.fa.fa-user
              |  #{user.local.nombre} #{user.local.apellido}
            p
              strong Email    : #{user.local.email} 
              hr
              a.btn.btn-light.btn-sm(href='/logout')
                | Cerra Sesión
  hr
  
  div(style='text-align: center;')
    input#files(type='file' name='files[]' multiple='')
    output#list
    br
    input(type='submit')
    
  hr
  .container
    table.table 
      thead
        tr
          th(scope='col') #
          th(scope='col') Nombre
          th(scope='col') Tipo
          th(scope='col') Tamanio
      tbody
        tr
          th(scope='row') 1
          td Mark
          td Otto
          td @mdo
        tr
          th(scope='row') 2
          td Jacob
          td Thornton
          td @fat
        tr
          th(scope='row') 3
          td Larry
          td the Bird
          td @twitter

